{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Presentation Script",
  "type": "object",
  "required": ["title", "scenes"],
  "properties": {
    "title": {
      "type": "string",
      "description": "動画全体のタイトル。"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "type": "string"
    },
    "background_defaults": {
      "type": "object",
      "properties": {
        "prompt": { "type": "string" },
        "change_interval_seconds": { "type": "integer", "minimum": 30 }
      },
      "additionalProperties": false
    },
    "character": {
      "type": "object",
      "description": "右側に表示するキャラクターの設定。",
      "properties": {
        "image_path": { "type": "string" },
        "position": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          },
          "required": ["x", "y"],
          "additionalProperties": false
        },
        "scale": { "type": "number", "minimum": 0.1 }
      },
      "required": ["image_path"],
      "additionalProperties": false
    },
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "narration", "panel"],
        "properties": {
          "id": { "type": "string" },
          "narration": { "type": "string" },
          "panel": {
            "type": "object",
            "required": ["title", "body"],
            "properties": {
              "title": { "type": "string" },
              "body": {
                "type": "array",
                "items": { "type": "string" }
              },
              "conclusion": { "type": "string" },
              "font_overrides": {
                "type": "object",
                "properties": {
                  "title_size": { "type": "integer", "minimum": 10 },
                  "body_size": { "type": "integer", "minimum": 8 },
                  "conclusion_size": { "type": "integer", "minimum": 8 }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "background_prompt": { "type": "string" },
          "subtitle_override": { "type": "string" },
          "subtitle_lines": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
